<div class="container">
  <div class="card mb-3">
    <img
      src="/assets/img/bobs-burgers.jpg"
      class="card-img-top"
      alt="bobs-burgers"
    />
  </div>
  <div class="row">
    <div class="col-6">
      <h3>
        Burgers to eat
      </h3>
      <ul class="list-group">
        {{#each burgers}}
          {{#unless devoured}}
            <li class="list-group-item">
              {{id}}
              -
              {{burger_name}}
              <button
                class="btn btn-outline-warning btn-sm devour-btn"
                data-id="{{id}}"
                type="button"
              >
                Devour!
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h3>
        Burgers I've eaten
      </h3>
      <ul class="list-group">
        {{#each burgers}}
          {{#if devoured}}
            <li class="list-group-item strike">
              {{id}}
              -
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-3">
      <h2>
        Add a Burger!
      </h2>
      <form>
        <div class="form-group">
          <label>
            Add a Burger!
          </label>
          <input
            class="form-control"
            type="text"
            placeholder="Enter the name of a burger..."
            id="burg"
          />
          <button
            type="submit"
            class="btn btn-outline-warning subButt"
            id="newBurger"
          >
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(".devour-btn").on("click", function (e) {
       var id = $(this).attr("data-id");
        var devouredBurger = {
            devoured: 1
        };
       $.ajax("/api/isdevoured/" + id, {
           type: "PUT",
           data: devouredBurger
       }).then(function() {
           location.reload();
            console.log("Burger has been devoured!")
       });
   });

   $("#newBurger").on("click", function(e) {
       e.preventDefault();
        var aNewBurger = {
            burger_name: $("#burg").val().trim()
        };
        $.ajax("/api/addburger", {
            type: "POST",
            data: aNewBurger
        }).then(function(){
            location.reload();
            console.log("A new challenger!");
        })
   });
</script>