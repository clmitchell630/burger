<div class="container">
  <h1>
    BURGER BURGER!
  </h1>
  <div class="row">
    <div class="col-6">
      <ul class="list-group">
        {{#each burgers}}
          {{#unless devoured}}
            <li class="list-group-item">
              {{id}}
              -
              {{burger_name}}
              <button
                class="btn btn-outline-warning btn-sm devour-btn"
                data-id="{{id}}"
                type="button"
              >
                Devour!
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <ul class="list-group">
        {{#each burgers}}
          {{#if devoured}}
            <li class="list-group-item">
              {{id}}
              -
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-3">
      <h2>
        Add a Burger!
      </h2>
      <form>
        <div class="form-group">
          <label>
            Add a Burger!
          </label>
          <input
            class="form-control"
            type="text"
            placeholder="Enter the name of a burger..."
          />
          <button type="submit" class="btn btn-outline-warning subButt">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(".devour-btn").on("click", function (e) {
       var id = $(this).attr("data-id");
        var devouredBurger = {
            devoured: 1
        }
       $.ajax("/api/isdevoured/" + id, {
           type: "PUT",
           data: devouredBurger,
       }).then(function() {
           location.reload();
            console.log("Burger has been devoured!")
       });
   });
</script>